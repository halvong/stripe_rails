<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<% if user_signed_in? && current_user.subscribed? %>

  <p>
    <strong>Secret:</strong>
    <%= @product.secret %>
  </p>

<% else %>

  <%= link_to 'Subscribe', new_subscription_path(plan: "monthly"), class: "btn btn-primary" %> |
  <br/><br/>
  <%= link_to 'Subscribe Annual', new_subscription_path(plan: "plan_FThB5qOHXXCDD2"), class: "btn btn-primary" %> |
  <br/><br/>

<% end %>



